<h2> <%= @list.name %> </h2>

  <div class="container">
    <div class="row justify-content-center">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card m-3" style="width: 18rem;">
          <h5 class="card-title"> <%=@list.movies.find(bookmark.movie_id).title %></h5>
        <img class="card-img-top" src=<%= "#{@list.movies.find(bookmark.movie_id).poster_url}" %> alt="Movie Poster">
        <em><%= bookmark.comment %></em>
        <%= button_to "Delete", bookmark_path(bookmark), method: :delete %>
      </div>
      <% end %>
    </div>
  </div>

<%= link_to "Add more movies", new_list_bookmark_path(params[:id]), class: "btn btn-flat" %>

<%= link_to "Back", lists_path %>
